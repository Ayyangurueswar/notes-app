{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/api"
      }
    ],
    "buildCommand": "npm run build --prefix frontend",
    "installCommand": "npm install --prefix frontend && npm install"
}